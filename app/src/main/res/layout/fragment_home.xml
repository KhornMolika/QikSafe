<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HomeFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Fragment"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/emergencySettingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Setting"
                android:layout_marginBottom="40dp"/>

            <Button
                android:id="@+id/startEmergencyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Emergency"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/emergencyContactBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Contact"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/recentAlertBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Alert"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/userProfileBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>