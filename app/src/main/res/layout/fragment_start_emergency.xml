<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_soft_gradient"
    android:padding="20dp">

    <!-- Hero card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Lottie animation -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/locationAnimation"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:lottie_rawRes="@raw/location_pulse"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Share your live location"
                android:textColor="#1B1B1B"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="5dp"
                android:gravity="center"
                android:text="Tap start to keep your emergency contacts updated in real time."
                android:textColor="#5F5F5F"
                android:textSize="14sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Status / info chip -->
    <com.google.android.material.chip.Chip
        android:id="@+id/chipInfo"
        style="@style/Widget.Material3.Chip.Assist.Elevated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Every 15 min if not stopped"
        app:chipIcon="@drawable/ic_schedule"
        app:chipIconTint="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/cardHero"
        app:layout_constraintStart_toStartOf="@id/cardHero"
        android:layout_marginTop="16dp" />

    <!-- Start CTA -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_location_button"
        style="@style/Widget.Material3.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Location\nSharing"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:paddingVertical="16dp"
        app:icon="@drawable/ic_location_on"
        app:iconTint="@android:color/white"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:cornerRadius="20dp"
        app:backgroundTint="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/chipInfo"
        app:layout_constraintStart_toStartOf="@id/cardHero"
        app:layout_constraintEnd_toEndOf="@id/cardHero"
        android:layout_marginTop="18dp" />

    <!-- Stop button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/stop_location_button"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stop Location\nSharing"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:paddingVertical="14dp"
        app:icon="@drawable/ic_location_off"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:cornerRadius="18dp"
        app:strokeColor="@color/primary"
        app:strokeWidth="2dp"
        app:iconTint="@color/primary"
        android:textColor="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/start_location_button"
        app:layout_constraintStart_toStartOf="@id/cardHero"
        app:layout_constraintEnd_toEndOf="@id/cardHero"
        android:layout_marginTop="12dp" />

    <!-- Privacy note -->
    <TextView
        android:id="@+id/tvPrivacyNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Youâ€™re in control. You can stop sharing anytime."
        android:textSize="12sp"
        android:textColor="#6F6F6F"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/cardHero"
        app:layout_constraintEnd_toEndOf="@id/cardHero"
        android:layout_marginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
